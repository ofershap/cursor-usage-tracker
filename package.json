{
  "name": "cursor-usage-tracker",
  "version": "0.0.0-development",
  "description": "Open-source Cursor IDE usage monitoring, anomaly detection, and alerting for enterprise teams",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . && prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky",
    "collect": "tsx src/lib/cli/collect.ts",
    "detect": "tsx src/lib/cli/detect.ts",
    "generate:mock": "tsx scripts/generate-mock-db.ts",
    "dev:mock": "DATABASE_PATH=data/mock.db next dev"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "bin": {
    "cursor-usage-tracker": "bin/create.mjs"
  },
  "files": [
    "bin/"
  ],
  "keywords": [
    "cursor",
    "cursor-ide",
    "usage-monitoring",
    "anomaly-detection",
    "cost-tracking",
    "enterprise",
    "developer-tools",
    "ai-spending"
  ],
  "author": "Ofer Shapira",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ofershap/cursor-usage-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/ofershap/cursor-usage-tracker/issues"
  },
  "homepage": "https://github.com/ofershap/cursor-usage-tracker#readme",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "better-sqlite3": "^12.6.2",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "recharts": "^3.7.0",
    "resend": "^6.9.2",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@next/eslint-plugin-next": "^16.1.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
